.modal.fade(id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
  .modal-dialog
    .modal-content
        form#edit-channel
            .modal-header
                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;
                h4.modal-title(id="myModalLabel") Edit channel
            .modal-body
                input(type="text" name="name" id="edit-name" class="form-control" required="" placeholder="Channel's name")
                input(type="url" name="link" id="edit-link" class="form-control" required="" placeholder="Channel's url")
            .modal-footer
                button(type="button" class="btn btn-default" data-dismiss="modal") Close
                input(type="submit" value="Edit" class="btn btn-primary")